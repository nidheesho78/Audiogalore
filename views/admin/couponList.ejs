    function removeCoupon(couponId){
  $.ajax({
    url : '/admin/removeCoupon',
    method : 'delete',
    data : {
      couponId : couponId
    },
    success: (response) => {
            if (response.status) {
              location.reload()
            }
          }
    
    
  })
  
 }
