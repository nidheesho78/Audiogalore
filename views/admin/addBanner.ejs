    <script>
        // Function to trim all form fields and check if they are empty
        function validateForm() {
          var title = document.getElementById('title').value.trim();
          var subTitle = document.getElementById('subTitle').value.trim();
          var price = document.getElementById('price').value.trim();
          var link = document.getElementById('link').value.trim();

          var image = document.getElementById('image').value; // No need to trim file input

          console.log(price);
          
          if (title === '' || subTitle === '' || price === '' || image === '' || link==='') {
            alert('All fields are required.');
            return false;
          }
          
          // Check if price is a positive number
          if (isNaN(price) || parseFloat(price) <= 0) {
            alert('Price should be a positive number.');
            return false;
          }
          
          // Check if the title and subtitle do not exceed 30 characters
          if (title.length > 30 || subTitle.length > 30) {
            alert('Title and Subtitle should not exceed 30 characters.');
            return false;
          }


          var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.gif)$/i;
    if (!allowedExtensions.test(image)) { // Use test() method instead of exec()
      alert('Invalid image file. Please select a valid image file (jpg, jpeg, png, gif).');
      return false;
    }
          
          return true;
        }
      
        // Attach the validation function to the form submit event
        document.getElementById('myform').addEventListener('submit', function(event) {
          if (!validateForm()) {
            event.preventDefault();
          }
        });
      </script>
      
