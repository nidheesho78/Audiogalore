   <script>
    function updateQuantity(productId, action) {
        const quantityInput = document.getElementById(`sst-${productId}`);
        let quantity = parseInt(quantityInput.value);

        if (action === 'increase') {
            quantity += 1;
        } else if (action === 'decrease' && quantity > 1) {
            quantity -= 1;
        }

        quantityInput.value = quantity;
        updateCart(productId, quantity);
    }

    function updateCart(productId, quantity) {
    fetch('/updatecart', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId, quantity })
    })
        .then(response => response.json())
        .then(data => {
            const totalPriceElement = document.getElementById(`total-${productId}`);
            totalPriceElement.textContent = `₹${data.totalPrice}.00`;

            const subtotalElement = document.getElementById('subtotal');
            subtotalElement.textContent = `₹${data.subTotal}.00`;
        })
        .catch(error => {
            console.error('Error:', error);
        });
}

</script>




<!-- delete cart -->
<script>
    function deleteProduct(cartId, proId,quantity) {

		event.preventDefault();

      
    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!',
      timer: 3000
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: '/delete-product-cart',
          method: 'DELETE',
          data: {
            cartId: cartId,
            proId: proId,
            quantity,quantity
          },
          success: (response) => {
            if (response.status) {
              location.reload()
            }
          }
        })
      }
    })

  }
</script>





