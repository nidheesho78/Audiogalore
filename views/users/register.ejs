                            <button type="submit" value="submit" class="btn submit_btn">Register</button><br><br>
                        </div>
                        <div class="col-md-12 form-group form-group-spacing" style="margin-bottom: 20px;display: flex; justify-content: center; align-items: center;">
                            <a href="/login">Already have an account?</a>
                           
                        </div>
                        <p ><%=(typeof message!=='undefined')?message:'' %></p>
                        <p id="error-message"></p>
                        
                        <div id="error-message" style="color: red;"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



    
<script>
    function validateForm() {
        var firstName = document.getElementById('first_name').value.trim();
        var lastName = document.getElementById('last_name').value.trim();
        var email = document.getElementById('email').value.trim();
        var phone = document.getElementById('phone').value.trim();

        var errorMessage = document.getElementById('error-message'); // Get the error message element

        // Reset error message
        errorMessage.textContent = '';

        // Trim and check if any field is empty
        if (firstName === '' || lastName === '' || email === '' || phone === '') {
            errorMessage.textContent = 'Please fill in all fields.'; // Set the error message
            return false;
        }

        // Validate name should not contain numbers
        if (/[\d]/.test(firstName) || /[\d]/.test(lastName)) {
            errorMessage.textContent = 'Name should not contain numbers.'; // Set the error message
            return false;
        }

        // Validate phone number format
        if (!/^\+\d{1,12}$/.test(phone)) {
            errorMessage.textContent = 'Phone number should be in the format of +1234567890 and can have a maximum of 12 digits.'; // Set the error message
            return false;
        }

        // Validate email format
        if (!/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(email)) {
            errorMessage.textContent = 'Please enter a valid email address.'; // Set the error message
            return false;
        }
     

        return true;
    }
</script>

    
    
